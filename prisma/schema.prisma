generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

// users : admin, student , teacher - > only the admin can create the other users

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

model User {
  id        String    @id @unique
  FirstName String
  LastName  String
  email     String    @unique
  password  String
  role      Role      @default(ADMIN)
  Session   Session[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
